@model web.Models.Oddelek

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Oddelek</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.OddelekIme)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OddelekIme)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.VrstaIzdelkov)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.VrstaIzdelkov)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.KmetijaID)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.KmetijaID)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Izdelki)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Ime izdelka</th>
                    <th>Vrsta izdelka</th>
                    <th>Cena izdelka</th>
                </tr>
                @foreach (var item in Model.Izdelki)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IzdelekIme)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IzdelekVrsta)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IzdelekCena)
                    </td>
            </tr>
        }
            </table>
        </dd>




    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.OddelekID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
